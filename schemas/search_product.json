{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["state", "data"],
  "properties": {
    "state": {
      "type": "object",
      "required": ["code", "title"],
      "properties": {
        "code": { "type": "integer" },
        "title": { "type": "string" }
      }
    },
    "data": {
      "type": "object",
      "required": ["product", "product_group"],
      "properties": {
        "product": {
          "type": "object",
          "required": [
            "product_guid", "code", "title", "section", "cover_image", "breadcrumbs",
            "unit_title", "unit_title_alt", "unit_ratio_alt", "weight", "properties",
            "height", "length", "width", "remains", "price", "price_alt", "link"
          ],
          "properties": {
            "product_guid": { "type": "string", "format": "uuid" },
            "code": { "type": "integer" },
            "title": { "type": "string" },
            "section": {
              "type": "object",
              "required": ["section_guid", "code", "title"],
              "properties": {
                "section_guid": { "type": "string", "format": "uuid" },
                "code": { "type": "integer" },
                "title": { "type": "string" }
              }
            },
            "cover_image": { "type": "string", "format": "uri" },
            "breadcrumbs": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["section_guid", "code", "title"],
                "properties": {
                  "section_guid": { "type": "string", "format": "uuid" },
                  "code": { "type": "integer" },
                  "title": { "type": "string" }
                }
              }
            },
            "unit_title": { "type": "string" },
            "unit_title_alt": { "type": "string" },
            "unit_ratio_alt": { "type": "number" },
            "weight": { "type": "number" },
            "height": { "type": "integer" },
            "length": { "type": "integer" },
            "width": { "type": "integer" },
            "properties": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["key", "title", "value"],
                "properties": {
                  "key": { "type": "string" },
                  "title": { "type": "string" },
                  "value": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": ["title"],
                      "properties": {
                        "title": { "type": "string" }
                      }
                    }
                  }
                }
              }
            },
            "remains": {
              "type": "object",
              "required": ["availability", "accessibility"],
              "properties": {
                "availability": { "type": "string" },
                "accessibility": { "type": "string" },
                "delivery": {
                  "type": "object",
                  "properties": {
                    "list": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": ["total"],
                        "properties": {
                          "total": { "type": "integer" }
                        }
                      }
                    }
                  }
                }
              }
            },
            "price": {
              "type": "object",
              "required": ["gold", "retail"],
              "properties": {
                "gold": { "type": "integer" },
                "retail": { "type": "integer" }
              }
            },
            "price_alt": {
              "type": "object",
              "required": ["gold", "retail"],
              "properties": {
                "gold": { "type": "number" },
                "retail": { "type": "number" }
              }
            },
            "link": { "type": "string", "format": "uri" }
          }
        },
        "product_group": {
          "type": "object",
          "required": ["guid", "title", "selectors"],
          "properties": {
            "guid": { "type": "string", "format": "uuid" },
            "title": { "type": "string" },
            "selectors": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["slug", "title", "values"],
                "properties": {
                  "slug": { "type": "string" },
                  "title": { "type": "string" },
                  "values": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": ["slug", "title", "value", "is_active", "is_checked", "product_code"],
                      "properties": {
                        "slug": { "type": "string" },
                        "title": { "type": "string" },
                        "value": { "type": "string" },
                        "is_active": { "type": "boolean" },
                        "is_checked": { "type": "boolean" },
                        "product_code": { "type": "integer" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}